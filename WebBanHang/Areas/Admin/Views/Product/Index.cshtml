@model List<Product>
<partial name="_Notification" />
<div class="row mb-4">
    <div class="col-md-6">
        <h2>LIST PRODUCT</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Add New
        </a>
    </div>
</div>
<div class="row">
    <div class="co-md-12 text-center">
        <from asp-action="Index" method="post">
            <div class="from-inline">
                Name<input name="textsearch" class="from-control" >
                <button type="submit" class="btn byn-sacondary">Search</button>

            </div>
        </from>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Image</th>
            <th>Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Name</td>
                <td>@x.Price</td>
                <td>@x.Category.Name</td>
                <td>
                    @if (x.ImageUrl != null)
                    {
                        <img src="/@x.ImageUrl" style="width:100px" />
                    }
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-outline-success">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>